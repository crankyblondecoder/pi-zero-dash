# pi-zero-dash Test Makefile
# ---------------------------

# NOTE: Put required libs last in the build so Debian based systems don't cry.

# Tell make to search other paths. Separate multiple with ":"
VPATH = ../../src/ : ../../src/test/

sourceLocn = ../../src/test/

cname = g++
cflags = -Wall -fPIC -g3 -Og

CXX = $(cname)
CXXFLAGS = $(cflags)

.PHONY : test
test : pzdTest.cpp
	@echo
	@echo "*** Building - Test ***"
	@echo
	$(cname) $(cflags) -o pzdTest $(sourceLocn)pzdTest.cpp $(addprefix ../debug/, $(objFiles)) $(addprefix -l, $(libs))
	@echo
	@echo

.PHONY : clean
clean :
	rm *.o *.dep pzdTest
